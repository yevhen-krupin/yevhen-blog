---
import "@fontsource/montserrat/900.css";
import Link from "./link.astro";

const pathname = Astro.url.pathname;
const isActive = pathname === "/";
---

<Link
  classList={[
    "inline-block text-2xl font-black font-['Montserrat']",
    { "hover:scale-[1.02]": !isActive },
  ]}
  target="_self"
  href="/"
  ><span
    style={{
      "--myColor1": isActive ? "var(--text)" : "var(--black)",
      "--myColor2": isActive ? "var(--text)" : "var(--purple)",
      backgroundImage:
        "linear-gradient(45deg, var(--myColor1), var(--myColor1))",
      backgroundClip: "text",
      WebkitBackgroundClip: "text",
      color: "transparent",
      transition: "--myColor1 0.2s ease-out, --myColor2 0.2s ease-in-out",
    }}>@ykrupin</span
  ></Link
>
